---
import Head from "../components/_head.astro";
import Sidebar from "../components/dashboard/_sidebar.astro";
import Navbar from "../components/dashboard/_navbar.astro";
import Footer from "../components/dashboard/_footer.astro";
import FixedPlugin from "../components/dashboard/_fixed-plugin.astro";
import Scripts from "../components/_scripts.astro";

interface Props {
  title?: string;
  description?: string;
  activePage?: string;
  pageTitle?: string;
  breadcrumbs?: Array<{label: string, href?: string}>;
}

const {
  title,
  description,
  activePage = "main",
  pageTitle = "main",
  breadcrumbs = [
    { label: "Pages" },
    { label: pageTitle }
  ]
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <Head title={title} description={description} />
</head>

<body class="g-sidenav-show bg-gray-100">
  <!-- Sidebar -->
  <Sidebar activePage={activePage} />
  
  <!-- Main Content -->
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <!-- Top Navbar -->
    <Navbar pageTitle={pageTitle} breadcrumbs={breadcrumbs} />
    
    <!-- Page Content -->
    <div class="container-fluid py-2">
      <slot />
      
      <!-- Footer -->
      <Footer />
    </div>
  </main>
  
  <!-- Settings Panel -->
  <FixedPlugin />
  
  <!-- Scripts -->
  <Scripts />
</body>
</html>